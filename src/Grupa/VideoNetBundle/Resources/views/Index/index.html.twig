{% extends "GrupaVideoNetBundle::layout.html.twig" %}
{% set start_active = ' active' %}
{% set filmy_active = '' %}
{% set forum_active = '' %}
{% set cos_active = '' %}
{% set kontakt_active = '' %}
{% set link_movies = "http://v-ie.uek.krakow.pl/~s176041/images/movies/" %}

{% block content %}

<div id="sliders-container">
	<section id="slider-row1">
		<header class="box-header"><h3 class="box-header-content">NOWOŚCI</h3></header>
		<div id="slider-news">
			<button id="news-prev" data-slide="9"><i class="glyphicon glyphicon-chevron-left" aria-hidden="true"></i></button>
			<div id="slider-news-inner">
				<div id="slider-news-preview">
					{% for movie in lastAdded %}
					<a class="slider-news-link" style="display:none" href="{{ path('grupa_video_net_films_view', {'id': movie.id}) }}">
						<div class="slider-movie-details">{{ movie.name }} ({{ movie.productionYear }})</div>
						<img class="slider-news-image" src="{{ link_movies }}{{ movie.movieBigFoto }}"/>
					</a>
					{% endfor %}
				</div>
				<div id="slider-news-jumpers">
					{% for movie in lastAdded %}
					<button class="slider-news-jumper">
						<img class="slider-news-jumper-image no-mobile" src="{{ link_movies }}{{ movie.movieFoto }}"/>
					</button>
					{% endfor %}
				</div>
			</div>
			<button id="news-next" data-slide="1"><i class="glyphicon glyphicon-chevron-right" aria-hidden="true"></i></button>
		</div>
	</section>
	<div id="sliders-row2">
