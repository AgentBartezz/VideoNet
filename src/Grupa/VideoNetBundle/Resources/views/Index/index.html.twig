							<div class="slider-movie-details">{{ movie.rev.movie.name }} ({{ movie.rev.movie.productionYear }})</div>
							<img class="slider-top-image" src="{{ link_movies }}{{ movie.rev.movie.movieBigFoto }}"/>
						</a>
						{% endfor %}
						
					</div>
					<div id="slider-top-jumpers">
						{% for movie in mostRev %}
						<button class="slider-top-jumper">
							<img class="slider-news-jumper-image" src="{{ link_movies }}{{ movie.rev.movie.movieFoto }}"/>
						</button>
						{% endfor %}
					</div>
				</div>
				<button id="top-next" data-slide="1">NE</button>
			</div>
		</section>
	</div>
	<section id="slider-row3">
		<header class="box-header"><h3 class="box-header-content">NAJNOWSZE ZWIASTUNY</h3></header>
		<article id="slider-trailers">
			<section id="trailers-container">
				<video class="trailer-player" width="100%" height="100%" controls>
					<source class="trailer-player-source" src="{{ trailers.trailer1 }}" type="video/mp4">
